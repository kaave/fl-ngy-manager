{
  "compilerOptions": {
    "sourceMap": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "app/assets/javascripts",
    "vendor/bundle"
  ],
  "files": [
    "node_modules/moment/moment.d.ts",
    "node_modules/ava/types/generated.d.ts"
  ],
  "filesGlob": [
    "frontend/javascripts/**/*.ts",
    "frontend/javascripts/**/*.tsx",
    "spec/javascripts/**/*.ts",
    "spec/javascripts/**/*.tsx"
  ]
}
